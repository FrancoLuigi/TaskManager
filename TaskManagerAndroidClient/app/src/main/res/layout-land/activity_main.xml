<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonModify"
        android:layout_width="124dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:text="Modify Task"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonGetState"
        app:layout_constraintTop_toBottomOf="@+id/buttonAssign"
        app:layout_constraintVertical_bias="0.41" />


    <Button
        android:id="@+id/buttonAssign"

        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:text="Assign Task"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/buttonGetFree"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/buttonRemove"

        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:text="Remove Task"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/buttonGet"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGetState"

        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:text="Get State My Tasks"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonAdd"
        app:layout_constraintTop_toBottomOf="@+id/buttonGetFree"
        app:layout_constraintVertical_bias="0.41" />

    <Button
        android:id="@+id/buttonAdd"

        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:text=" Add Task"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonComplete"
        app:layout_constraintTop_toBottomOf="@+id/buttonRemove"
        app:layout_constraintVertical_bias="0.41" />

    <TextView
        android:id="@+id/notetext"

        android:layout_width="158dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"

        android:layout_marginLeft="200dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="24dp"
        android:text="Task Manager"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/buttonGetFree"

        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:text="Get Free Task"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/buttonRemove"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGet"

        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:text="Get Task"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonComplete"

        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:text="Complete task"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGet"
        app:layout_constraintVertical_bias="0.41" />


</android.support.constraint.ConstraintLayout>


